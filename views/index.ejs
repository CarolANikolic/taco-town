      </li>
        <li><%= recipe.ingredients.toppings[0].name %></li>
        <li>
          <ul>
            <% recipe.ingredients.toppings[0].ingredients.map(ingredient => { %>
              <li>
                <%= recipe.ingredients.toppings[0].quantity %>
                <%= ingredient %>
              </li>
            <% }) %>
          </ul>
        </li>
    </ul>
    <% } %>
  </div>
